@model IEnumerable<HOTEISMVC.Models.Quarto>

@{
    ViewData["Title"] = "Quartos";
}

<h1>Quartos</h1>

<p class="pt-2">
    <a class="btn btn-primary" asp-action="Create">Add Quarto</a>
</p>
<table class="table table-striped">
    <thead class="table-light">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Hotel)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NumOcupantes)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NumAdultos)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NumCriancas)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Preco)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Hotel.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NumOcupantes)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NumAdultos)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NumCriancas)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Preco)
            </td>
            <td>
                <a class="btn btn-primary" asp-action="Edit" asp-route-id="@item.Id">Editar</a> |
                <a class="btn btn-primary" asp-action="Details" asp-route-id="@item.Id">Detalhes</a> |
                <a class="btn btn-primary" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
